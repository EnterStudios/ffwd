# vim: filetype=ruby

VERSION_PATTERN = /^\s*VERSION = \"(.+)\"$/

matcher = proc do |line|
  if m = VERSION_PATTERN.match(line)
    m[1]
  else
    nil
  end
end

read_version do
  parse_file "lib/ffwd/version.rb", matcher
end

write_version do |old, new|
  update_files Dir.glob("**/version.rb"), matcher, old, new
end
